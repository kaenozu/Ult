# Trader Pro Environment Variables
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control

# =============================================
# API Keys (Server-side only - Never use NEXT_PUBLIC_ prefix)
# =============================================

# Alpha Vantage API Key (for stock data & news sentiment)
# Get your key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alphavantage_api_key_here

# OpenAI API Key (for AI/ML features)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (for Claude AI features)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# IEX Cloud API Key (for market data)
# Get your key at: https://iexcloud.io/
IEX_CLOUD_API_KEY=your_iex_cloud_api_key_here

# Polygon API Key (for market data)
# Get your key at: https://polygon.io/
POLYGON_API_KEY=your_polygon_api_key_here

# Alpaca API Keys (for trading/broker integration)
# Get your keys at: https://alpaca.markets/
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here

# OANDA API Keys (for forex trading)
OANDA_API_KEY=your_oanda_api_key_here
OANDA_ACCOUNT_ID=your_oanda_account_id_here

# Interactive Brokers API Keys
IB_API_KEY=your_ib_api_key_here
IB_ACCOUNT_ID=your_ib_account_id_here

# Alternative Data API Key (for economic indicators)
ALTERNATIVE_DATA_API_KEY=your_alternative_data_api_key_here

# =============================================
# Database
# =============================================

# Database connection string (if using external database)
DATABASE_URL=postgresql://user:password@localhost:5432/traderpro

# =============================================
# Monitoring & Error Tracking
# =============================================

# Sentry DSN (for error tracking)
# Get your DSN at: https://sentry.io/
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn-here
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here

# =============================================
# Application Settings
# =============================================

# Application URL (used for callbacks and links)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Server port (default: 3000)
PORT=3000

# Node environment (development, production, test)
NODE_ENV=development

# =============================================
# Feature Flags (Public - Can use NEXT_PUBLIC_)
# =============================================

# Enable ML predictions feature
NEXT_PUBLIC_ENABLE_ML_PREDICTIONS=false

# Enable backtest feature
NEXT_PUBLIC_ENABLE_BACKTEST=true

# =============================================
# Logging
# =============================================

# Log level: debug, info, warn, error
LOG_LEVEL=info
