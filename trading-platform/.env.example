# ═══════════════════════════════════════════════════════════════════════════════
# 必須環境変数 (Required)
# ═══════════════════════════════════════════════════════════════════════════════

# Alpha Vantage API Configuration
# 用途: 株価データの取得（日次・イントラデイ）
# 取得方法: https://www.alphavantage.co/support/#api-key で無料取得
# 制限: 無料プランは5リクエスト/分、25リクエスト/日
# IMPORTANT: Use ALPHA_VANTAGE_API_KEY (NOT NEXT_PUBLIC_*) to keep it server-side only
ALPHA_VANTAGE_API_KEY=your_api_key_here

# ═══════════════════════════════════════════════════════════════════════════════
# アプリケーション設定 (Application Settings)
# ═══════════════════════════════════════════════════════════════════════════════

# Next.js アプリケーションURL
# 用途: APIルートの構築、リダイレクトURL
# 開発時: http://localhost:3000
# 本番時: https://your-domain.com
NEXT_PUBLIC_APP_URL=http://localhost:3000

# バックエンドAPI URL (オプション)
# 用途: Pythonバックエンド分析エンジンとの通信
# 開発時: http://localhost:8000
# 未設定時: フロントエンドの分析機能のみ使用
BACKEND_API_URL=http://localhost:8000

# ═══════════════════════════════════════════════════════════════════════════════
# データ取得設定 (Data Fetching)
# ═══════════════════════════════════════════════════════════════════════════════

# データ取得タイムアウト (ミリ秒)
# 用途: APIリクエストのタイムアウト設定
# デフォルト: 10000 (10秒)
API_TIMEOUT_MS=10000

# キャッシュ有効期限 (秒)
# 用途: 市場データのクライアントサイドキャッシュ
# デフォルト: 300 (5分)
CACHE_TTL_SECONDS=300

# ═══════════════════════════════════════════════════════════════════════════════
# 機能フラグ (Feature Flags)
# ═══════════════════════════════════════════════════════════════════════════════

# WebSocketリアルタイムデータ有効化
# 用途: リアルタイム株価更新機能
# 値: true | false
# デフォルト: false
ENABLE_WEBSOCKET=false

# ペーパートレードモード
# 用途: 実際の取引を行わずシミュレーションのみ実行
# 値: true | false
# デフォルト: true
PAPER_TRADE_MODE=true

# 高度な分析機能有効化
# 用途: バックエンドPython分析エンジンの使用
# 値: true | false
# デフォルト: false
ENABLE_ADVANCED_ANALYTICS=false

# ═══════════════════════════════════════════════════════════════════════════════
# ログ・デバッグ (Logging & Debug)
# ═══════════════════════════════════════════════════════════════════════════════

# ログレベル
# 用途: コンソールログの詳細度
# 値: debug | info | warn | error
# デフォルト: info
LOG_LEVEL=info

# 開発モード詳細ログ
# 用途: 開発時の詳細なデバッグ情報出力
# 値: true | false
# デフォルト: false
DEBUG_MODE=false

# ═══════════════════════════════════════════════════════════════════════════════
# セキュリティ設定 (Security)
# ═══════════════════════════════════════════════════════════════════════════════

# レート制限: 1分あたりの最大リクエスト数
# 用途: APIレート制限の設定
# デフォルト: 60
RATE_LIMIT_PER_MINUTE=60

# 許可するオリジン (CORS)
# 用途: APIアクセスを許可するドメイン
# 開発時: http://localhost:3000
# 複数指定時: カンマ区切り (http://localhost:3000,https://example.com)
ALLOWED_ORIGINS=http://localhost:3000

# ═══════════════════════════════════════════════════════════════════════════════
