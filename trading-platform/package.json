{
  "name": "trading-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "test:ci": "jest --config=jest.ci.config.js",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "db:migrate:status": "node ../scripts/db-migrate.js status",
    "db:migrate:create": "node ../scripts/db-migrate.js create",
    "db:migrate:validate": "node ../scripts/db-migrate.js validate",
    "docs:generate": "echo 'OpenAPI spec is generated dynamically at /api/openapi.json'",
    "docs:serve": "npm run dev",
    "prepare": "husky install"
  },
  "dependencies": {
    "@sentry/nextjs": "10.38.0",
    "@tanstack/react-query": "5.90.20",
    "@tanstack/react-query-devtools": "5.91.3",
    "@tensorflow/tfjs": "4.22.0",
    "chart.js": "^4.5.1",
    "chartjs-plugin-zoom": "2.2.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dompurify": "^3.3.1",
    "jsonwebtoken": "^9.0.3",
    "lucide-react": "0.562.0",
    "next": "^16.1.6",
    "next-intl": "4.8.1",
    "react": "19.2.3",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "19.2.3",
    "recharts": "^2.15.1",
    "sonner": "^2.0.7",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-react": "5.31.0",
    "tailwind-merge": "^3.4.0",
    "web-vitals": "5.1.0",
    "yahoo-finance2": "^3.11.2",
    "zod": "4.3.6",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@fast-check/jest": "^1.8.2",
    "@playwright/test": "^1.48.0",
    "@swc/helpers": "0.5.18",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "14.6.1",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/swagger-jsdoc": "6.0.4",
    "@types/swagger-ui-react": "5.18.0",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "fake-indexeddb": "6.2.5",
    "fast-check": "^4.5.3",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "ts-node": "^10.9.2",
    "typescript": "5.9.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "jest --passWithNoTests --findRelatedTests"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "optionalDependencies": {
    "@tailwindcss/oxide-wasm32-wasi": "4.1.18"
  }
}
