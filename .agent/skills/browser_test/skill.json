{
  "name": "browser_test",
  "description": "Automated browser testing and validation for AGStock Ult web application",
  "version": "1.0.0",
  "author": "AGStock Ult Team",
  "category": "testing",
  "tags": ["browser", "testing", "ui", "automation", "selenium"],
  "capabilities": [
    "Automated browser testing",
    "Page loading validation",
    "Navigation testing",
    "Component rendering verification",
    "API integration testing",
    "Responsive design testing",
    "Error handling validation",
    "Screenshot capture",
    "HTML report generation",
    "Performance metrics"
  ],
  "supported_file_types": [".tsx", ".ts", ".jsx", ".js", ".html", ".css"],
  "dependencies": {
    "python": ">=3.8",
    "selenium": ">=4.15.0",
    "chrome_browser": ">=90.0"
  },
  "configuration": {
    "default_url": "http://localhost:3000",
    "default_timeout": 10,
    "default_headless": true,
    "screenshot_support": true,
    "html_report_support": true,
    "url_validation": {
      "allowed_schemes": ["http", "https"],
      "allowed_hosts": ["localhost", "127.0.0.1", "0.0.0.0"],
      "allow_local_networks": true
    }
  },
  "entry_point": "scripts/test_browser.py",
  "documentation": "SKILL.md"
}
