{
  "name": "auto-runner",
  "description": "Auto-run development tasks on file changes or at intervals",
  "parameters": {
    "type": "object",
    "properties": {
      "action": {
        "type": "string",
        "enum": ["watch", "schedule", "pre-commit", "status"],
        "description": "Auto-run action"
      },
      "tasks": {
        "type": "array",
        "items": { "type": "string" },
        "description": "Tasks to run automatically",
        "default": ["build", "test"]
      },
      "watchDir": {
        "type": "string",
        "description": "Directory to watch for changes",
        "default": "trading-platform/app"
      },
      "interval": {
        "type": "number",
        "description": "Check interval in seconds",
        "default": 60
      }
    },
    "required": ["action"]
  }
}
