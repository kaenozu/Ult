{
  "name": "tdd-developer",
  "description": "Test-Driven Development agent for trading platform. Write tests first, then implement features",
  "parameters": {
    "type": "object",
    "properties": {
      "action": {
        "type": "string",
        "enum": ["write-tests", "run-tests", "test-coverage", "create-test-file", "verify-red-green-refactor", "mock-api"],
        "description": "The TDD action to perform"
      },
      "component": {
        "type": "string",
        "description": "Component name to test (e.g., StockChart, SignalPanel)"
      },
      "features": {
        "type": "array",
        "items": { "type": "string" },
        "description": "Features to test"
      },
      "testDir": {
        "type": "string",
        "description": "Directory for test files",
        "default": "app/__tests__"
      },
      "mockData": {
        "type": "boolean",
        "description": "Use mock data for tests",
        "default": true
      }
    },
    "required": ["action"]
  }
}
