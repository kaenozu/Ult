{
  "name": "frontend-tester",
  "description": "Test and verify frontend functionality, check for console errors, hydration issues, and UI bugs",
  "parameters": {
    "type": "object",
    "properties": {
      "action": {
        "type": "string",
        "enum": ["check-build", "start-server", "verify-pages", "check-console", "run-e2e", "take-screenshot", "full-check"],
        "description": "The testing action to perform"
      },
      "pages": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Pages to test",
        "default": ["/", "/heatmap", "/journal", "/screener"]
      },
      "waitTime": {
        "type": "number",
        "description": "Time to wait for page load in ms",
        "default": 3000
      },
      "browser": {
        "type": "string",
        "enum": ["chromium", "firefox", "webkit"],
        "description": "Browser to use for testing",
        "default": "chromium"
      }
    },
    "required": ["action"]
  }
}
