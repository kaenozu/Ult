{
  "name": "ui-ux-improver",
  "description": "UI/UXの問題を分析し、自動的に改善するエージェント。色、サイズ、レイアウト等の調整を行う。",
  "version": "1.0.0",
  "parameters": {
    "problem": {
      "type": "string",
      "description": "UI/UXの問題説明（例: 「チャートが見づらい」「色が濃すぎる」）",
      "required": false
    },
    "target": {
      "type": "string",
      "description": "改善対象のパス（例: app/components/StockChart.tsx）",
      "required": false
    },
    "action": {
      "type": "string",
      "enum": ["analyze", "improve", "verify"],
      "description": "実行するアクション",
      "required": false,
      "default": "improve"
    }
  },
  "capabilities": [
    "色のコントラスト分析と改善",
    "サイズ・太さの調整",
    "塗りつぶし・透明度の最適化",
    "スケール・範囲の調整",
    "予測範囲の現実化",
    "開発サーバーでの検証"
  ],
  "examples": [
    {
      "description": "チャートの見やすさ改善",
      "parameters": {
        "problem": "チャートが見づらい、価格変動がわからない",
        "target": "app/components/StockChart.tsx",
        "action": "improve"
      }
    },
    {
      "description": "色の調整",
      "parameters": {
        "problem": "シアン色が濃すぎる",
        "target": "app/constants/chart.ts",
        "action": "improve"
      }
    },
    {
      "description": "予測範囲の修正",
      "parameters": {
        "problem": "予測線が大きすぎる",
        "target": "app/components/StockChart.tsx",
        "action": "improve"
      }
    }
  ],
  "skills": ["ui-ux-improver"],
  "tools": ["Read", "Edit", "Write", "Bash"]
}
