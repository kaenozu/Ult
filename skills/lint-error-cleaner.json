{
  "name": "lint-error-cleaner",
  "description": "ESLint、Prettierのエラーを自動検出・修正するスキル。コードスタイルの統一、潜在的なバグの排除、ベストプラクティスの適用を行う。",
  "version": "1.0.0",
  "priority": "medium",
  "auto_activate": false,
  "rules": [
    "eslint-auto-fix",
    "prettier-format",
    "import-sorting",
    "unused-code-removal",
    "type-safety-check"
  ],
  "capabilities": [
    "ESLintエラーの自動修正",
    "Prettierによるコードフォーマット",
    "未使用インポート・変数の削除",
    "型安全性のチェック",
    "コードの複雑度分析"
  ],
  "commands": [
    "eslint --fix",
    "prettier --write",
    "tsc --noEmit"
  ]
}
