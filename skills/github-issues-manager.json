{
  "name": "github-issues-manager",
  "description": "GitHub Issuesを効率的に作成・管理するスキル。テンプレートに基づく一括作成、ラベル付け、マイルストーン設定、関連Issueのリンクを自動化する。",
  "version": "1.0.0",
  "priority": "medium",
  "auto_activate": false,
  "triggers": [
    "Issueを作成",
    "複数のIssue",
    "タスク管理",
    "issue作成して"
  ],
  "rules": [
    "template-based-creation",
    "categorization",
    "milestone-assignment",
    "cross-referencing",
    "batch-processing"
  ],
  "issue_categories": {
    "CI": "CI/CD改善",
    "DEBT": "技術的負債",
    "DOC": "ドキュメント",
    "DX": "開発体験",
    "KNOW": "知識共有",
    "PERF": "パフォーマンス",
    "SEC": "セキュリティ",
    "TRADING": "取引機能"
  },
  "workflow": {
    "step1": "作成対象タスクの収集と分類",
    "step2": "カテゴリに基づくIssueテンプレート選択",
    "step3": "一括Issue作成",
    "step4": "ラベルとマイルストーンの設定",
    "step5": "関連Issue間のリンク設定",
    "step6": "サマリードキュメント作成"
  },
  "commands": [
    "gh issue create --title \"{title}\" --body \"{body}\" --label \"{label}\" --repo {owner}/{repo}",
    "gh issue list --state open --label {label}",
    "gh issue edit {number} --add-label {label}"
  ],
  "capabilities": [
    "テンプレートに基づく一括Issue作成",
    "自動カテゴリ分類とラベル付け",
    "マイルストーン連携",
    "Issue間の依存関係管理"
  ]
}
