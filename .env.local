# Environment Variables for Living Nexus & Strategy Shifter

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws/regime
API_TIMEOUT=30000

# WebSocket Configuration
WS_RECONNECT_INTERVAL=5000
WS_MAX_RECONNECT_ATTEMPTS=5

# UI Configuration
UI_THEME=auto
UI_LANGUAGE=en
UI_CURRENCY=USD

# Feature Flags
NEXT_PUBLIC_ENABLE_DEBUG=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true
ENABLE_WEBSOCKET=true
ENABLE_MOCK_DATA=false

# Development Settings
NODE_ENV=development

# Bundle Analysis
ANALYZE=false

# External APIs (if needed)
# YAHOO_FINANCE_API_KEY=your_key_here
# ALPHA_VANTAGE_API_KEY=your_key_here

# Security (for production)
# NEXT_PUBLIC_CORS_ORIGINS=https://yourdomain.com

# Backend CORS Origins for testing
CORS_ORIGINS_STR=http://localhost:3000,http://localhost:3001